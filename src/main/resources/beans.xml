<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="soumen"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="22"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="sourodeep"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="15"></constructor-arg>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="sourav"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="20"></constructor-arg>
    </bean>

    <bean id="movie" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>

    <bean name="moviea,movieb" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>

    <bean name="movieA,movieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor3"></constructor-arg>
    </bean>
</beans>